{% load static %}
<html>
<head>
	<title>All Expenses</title>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="{%static 'css/font.css' %}">
	<link rel="stylesheet" type="text/css" href="{%static 'css/expense.css' %}">
</head>
<body>
	<h1>List of all your expenses</h1>
	<div class="container">
		{%for each in allExpense%}
			<div class="expense-details-padding">
				<div class="expense-details" id={{each.id}}>
					<div class="expense-details-name">
						<h2>{{each.name}}</h2>
					</div>
					<hr>
					<div class="actors-involved">
						{%for item in each.actors%}
							<button class="actor-item">
								<label>{{item}}</label>
								{# <button class="delete-btn">x</button> #}
							</button>
						{%endfor%}
					</div>
					<p>{{each.dateTime|date:"F d, Y"}}</p>
				</div>
			</div>
		{%endfor%}
	</div>
</body>
</html>